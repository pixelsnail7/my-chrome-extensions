{
  "manifest_version": 3,
  "name": "web writer",
  "version": "1.0",
  "description": "A sample Browser Action Extension for writing text",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "nativeMessaging"
  ],
  "action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png",
      "128": "icon/icon128.png"
    },
    "default_title": "Web writer",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "128": "icon/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}